<launch>
    <arg name="image_topic" default="/thermal_cam/image_rect_color"/>
    <arg name="camera_info_topic" default="/thermal_cam/camera_info"/>
    <arg name="use_rviz" default="true"/>

    <node pkg="thermal_88" type="thermal_wrapper_node" name="thermal_pipeline" output="screen">
        <param name="image_topic" value="$(arg image_topic)"/>
        <param name="camera_info_topic" value="$(arg camera_info_topic)"/>
        <param name="rviz" value="$(arg use_rviz)"/>
    </node>

    <node type="rviz" name="calib_rviz" pkg="rviz" args="-d $(find thermal_88)/config/pipeline.rviz" if="$(arg use_rviz)"/>
</launch>