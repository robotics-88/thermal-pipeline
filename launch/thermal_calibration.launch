<launch>
    <!-- <arg name="image_topic" default="/zed2i/zed_node/left/image_rect_color"/>
    <arg name="camera_info_topic" default="/zed2i/zed_node/left/camera_info"/> -->
    <arg name="checkerboard_squares" default="7"/>
    <arg name="camera_name" default="seek_thermal"/>

    <param name="/use_sim_time" value="true"/>

    <node pkg="thermal_88" type="thermal_calibrator_node" name="thermal_calibrator" output="screen">
        <param name="checkerboard_squares" value="$(arg checkerboard_squares)"/>
        <param name="camera_name" value="$(arg camera_name)"/>
        <!-- <param name="camera_info_topic" value="$(arg camera_info_topic)"/>
        <param name="pointcloud_topic" value="$(arg pointcloud_topic)"/>
        <param name="has_pcl" value="$(arg has_pcl)"/>
        <param name="rviz" value="$(arg use_cvshow)"/> -->
    </node>

    <node type="rviz" name="calib_rviz" pkg="rviz" args="-d $(find thermal_88)/config/calibrator.rviz"/>
</launch>